{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"module": "es2022",
		"esModuleInterop": true,
		"target": "es2022",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"emitDeclarationOnly": true,
		"composite": true
	},
	"lib": ["2022"],
	"include": ["**/*"]
}
